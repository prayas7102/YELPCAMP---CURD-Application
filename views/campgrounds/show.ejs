				<form class="d-inline" action="/campgrounds/<%=campgrounds._id%>?_method=DELETE" method="POST">
				  <button  class="d-inline btn btn-danger">DELETE</button>
				</form>
			<% } %>
			<a href="/campgrounds" class="card-link btn btn-info">All campgrounds</a>
			</div>
		</div>
